{
  "name": "@simbo/clirk",
  "description": "A utility that simplifies creating Node.js CLIs and provides common CLI functionalities out of the box.",
  "version": "1.0.0",
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages/tree/main/packages/clirk",
  "repository": "github:simbo/packages",
  "bugs": "https://github.com/simbo/packages/issues",
  "keywords": [
    "cli",
    "framework",
    "clirk",
    "command-line",
    "arguments",
    "help",
    "version",
    "exit",
    "graceful-exit",
    "utilities",
    "tooling",
    "typescript"
  ],
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./clitch": "./dist/clitch/clitch.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "prettier --check .",
    "check:types": "tsc --noEmit",
    "clean:dist": "rm -rf dist",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "dependencies": {
    "@simbo/cli-output": "workspace:*",
    "@simbo/find-up-package": "workspace:*",
    "@simbo/graceful-exit": "workspace:*",
    "@simbo/plural": "workspace:*",
    "@simbo/stringify-error": "workspace:*",
    "minimist": "catalog:packages",
    "yoctocolors": "catalog:packages"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:core",
    "@simbo/eslint-config": "workspace:*",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:core",
    "@types/minimist": "catalog:packages",
    "@vitest/coverage-v8": "catalog:core",
    "@vitest/ui": "catalog:core",
    "eslint": "catalog:core",
    "jiti": "catalog:core",
    "prettier": "catalog:core",
    "prettier-plugin-organize-attributes": "catalog:core",
    "typescript": "catalog:core",
    "vitest": "catalog:core"
  }
}
